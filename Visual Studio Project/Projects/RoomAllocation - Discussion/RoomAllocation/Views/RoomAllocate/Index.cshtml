@model IEnumerable<RoomAllocation.Models.User>
@{
    ViewBag.Title = "Allocated Rooms";
}

<h2>Minds</h2>

<table class="table">
    <tr>
        <th> MID</th>
        <th> Name </th>
        <th> Track Name</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @item.user_mid
        </td>
        <td>
            @item.user_name
        </td>
        <td>
            @item.user_trackName
        </td>
        @{
            {
                    <td>
                        @Html.ActionLink("Allocate Room", "Allocate", new { id = item.userID })
                    </td>
            }
                    if (item.user_totalCost >= 2000)
                    {
                            <td bgcolor = "#FFD700">
                                Gold Member
                            </td>
                        }
                    else
                    {
                            <td></td>
                        }
                }
    </tr>
    }

</table>
